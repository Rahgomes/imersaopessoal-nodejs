<%- include('includes/head'); %>
    <%- include('includes/nav'); %>

        <div class="container">
            <div class="row">
                <div class="col-lg-2"></div>
                <div class="col-lg-8 my-3">
                    <h1 class="text-center">Criar conta ou Entrar</h1>
                    <p class="text-center lead">Faça login ou crie sua conta abaixo.</p>

                    <%- include('includes/messages'); %>

                        <div class="row">
                            <div class="col-lg my-5">
                                <h4>Faça seu cadastro</h4>
                                <p>Se você ainda não tem conta, preencha o formulário abaixo:</p>
                                <form class="form-cadastro" action="/login/register" method="POST">
                                    <input type="hidden" name="_csrf" value=<%=csrfToken %> >
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text bg-warning">E-mail</div>
                                        </div>
                                        <input type="email" class="form-control" name="email">
                                    </div>
                                    <div class="input-group mt-2 mb-2">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text bg-warning">Senha</div>
                                        </div>
                                        <input type="password" class="form-control" name="password">
                                    </div>
                                    <button type="submit" class="btn btn-outline-warning text-muted w-100">Criar minha
                                        conta</button>
                                </form>
                            </div>
                            <div class="col-lg my-5">
                                <h4>Faça seu login</h4>
                                <p>Se você já possui uma conta, faça o login preenchendo o formulário abaixo:</p>
                                <form class="form-login" action="/login/login" method="POST">
                                    <input type="hidden" name="_csrf" value=<%=csrfToken %> >
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text bg-warning">E-mail</div>
                                        </div>
                                        <input type="email" class="form-control" name="email">
                                    </div>
                                    <div class="input-group mt-2 mb-2">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text bg-warning">Senha</div>
                                        </div>
                                        <input type="password" class="form-control" name="password">
                                    </div>
                                    <button type="submit"
                                        class="btn btn-outline-warning text-muted w-100">Entrar</button>
                                </form>

                            </div>
                        </div>

                </div>
                <div class="col-lg-2"></div>
            </div>
        </div>

        <%- include('includes/footer'); %>