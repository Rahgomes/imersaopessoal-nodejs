<%- include('includes/head'); %>
    <%- include('includes/nav'); %>

        <div class="container">
            <div class="row">
                <div class="col-lg-2"></div>
                <div class="col-lg-8 my-3">
                    <h1 class="text-center">Contato</h1>
                    <p class="text-center lead">Crie ou edite seu contato abaixo.</p>

                    <%- include('includes/messages'); %>

                        <% if(contato._id) { %>
                            <form action="/contato/edit/<%= contato._id %>" method="POST">
                                <% } else { %>
                                    <form action="/contato/register" method="POST">
                                        <% } %>

                                            <input type="hidden" name="_csrf" value=<%=csrfToken %> >
                                            <div class="input-group mb-3">
                                                <div class="input-group-prepend">
                                                    <div class="input-group-text bg-warning">Nome</div>
                                                </div>
                                                <input value="<%= contato.nome %>" type="text" class="form-control"
                                                    name="nome">
                                            </div>
                                            <div class="input-group mb-3">
                                                <div class="input-group-prepend">
                                                    <div class="input-group-text bg-warning">Sobrenome</div>
                                                </div>
                                                <input value="<%= contato.sobrenome %>" type="text" class="form-control"
                                                    name="sobrenome">
                                            </div>
                                            <div class="input-group mb-3">
                                                <div class="input-group-prepend">
                                                    <div class="input-group-text bg-warning">E-mail</div>
                                                </div>
                                                <input value="<%= contato.email %>" type="email" class="form-control"
                                                    name="email">
                                            </div>
                                            <div class="input-group mb-3">
                                                <div class="input-group-prepend">
                                                    <div class="input-group-text bg-warning">Telefone</div>
                                                </div>
                                                <input value="<%= contato.telefone %>" type="tel" class="form-control"
                                                    name="telefone">
                                            </div>
                                            <button type="submit"
                                                class="btn btn-outline-warning text-muted w-100">Salvar contato</button>
                                    </form>

                </div>
                <div class="col-lg-2"></div>
            </div>
        </div>

        <%- include('includes/footer'); %>