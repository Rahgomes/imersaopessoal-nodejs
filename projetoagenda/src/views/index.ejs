<%- include('includes/head'); %>
    <%- include('includes/nav'); %>

        <div class="container">
            <div class="row">
                <div class="col-lg-1"></div>
                <div class="col-lg-10 my-3">
                    <h1 class="text-center">Agenda</h1>
                    <p class="text-center lead">Seus contatos estão abaixo.</p>

                    <%- include('includes/messages'); %>

                        <% if(contatos.length> 0 ) { %>
                            <div class="responsive-table">
                                <table class="table table-striped my-3">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th scope="col">Nome</th>
                                            <th scope="col">Sobrenome</th>
                                            <th scope="col">Telefone</th>
                                            <th scope="col">E-mail</th>
                                            <th scope="col">Editar contato</th>
                                            <th scope="col">Deletar contato</th>
                                        </tr>
                                    </thead>
                                    <% contatos.forEach(contato=> { %>
                                        <tr>
                                            <td>
                                                <%= contato.nome %>
                                            </td>
                                            <td>
                                                <%= contato.sobrenome %>
                                            </td>
                                            <td>
                                                <%= contato.telefone %>
                                            </td>
                                            <td>
                                                <%= contato.email %>
                                            </td>
                                            <td><a class="text-warning" href="/contato/<%= contato._id %>">Editar</a>
                                            </td>
                                            <td><a class="text-danger"
                                                    href="/contato/delete/<%= contato._id %>">Deletar</a>
                                            </td>
                                        </tr>
                                        <% });%>
                                </table>
                            </div>
                            <% } else { %>
                                <p class="text-center lead">Não existem contatos em sua agenda</p>
                                <% } %>
                </div>
                <div class="col-lg-1"></div>
            </div>
        </div>

        <%- include('includes/footer'); %>